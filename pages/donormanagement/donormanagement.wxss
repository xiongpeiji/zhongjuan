/* pages/donormanagement/donormanagement.wxss */
.dona_infos{
    height: 200rpx;
    padding:60rpx 20rpx 55rpx 20rpx;
    background: #df4334;
    box-sizing: border-box;
}
.dona_name{
    height: 48rpx;
    font-size: 34rpx;
    margin-bottom: 12rpx;
}
.help_title{
    float: left;
    line-height: 48rpx;
    color:#fff;
    font-weight: bold;
}
.right_type{
    float: left;
    height: 34rpx;
    line-height: 34rpx;
    padding:0 15rpx;
    font-size: 20rpx;
    color:#666666;
    background: #fff;
    border-radius: 17rpx;
    margin-left: 25rpx;
    margin-top: 8rpx;
}
.right_type image{
    width: 17rpx;
    height: 20rpx;
    float: left;
    margin-top: 8rpx;
    margin-right: 5rrpx;
}
.help_sm_tit{
    height: 34rpx;
    line-height: 34rpx;
}
.help_sm_tit image{
    float: left;
    width: 24rpx;
    height: 30rpx;
}
.address_text{
    float: left;
    font-size: 24rpx;
    color:#F5F5F5;
}
.help_content{
    width: 100%;
    padding:0 40rpx 0 45rpx;
    box-sizing: border-box;
}
.help_ul{
    border-left: 1px solid #D2D2D2;
    padding-left: 30rpx;
    padding-bottom: 30rpx;
}
.help_list{
    padding-top: 30rpx;
}
.my_help_list{
    height: 45rpx;
    line-height: 45rpx;
    font-size: 32rpx;
    color:#666666;
    font-weight: bold;
    margin-bottom: 60rpx;
}
.go_help{
    float: right;
    height: 50rpx;
    line-height: 46rpx;
    text-align: center;
    border: 2rpx solid #E65E34;
    border-radius: 25rpx;
    color:#E65E34;
    font-size: 24rpx;
    width: 147rpx;
    margin-top: -2rpx;
}
.public_hover{
    background: #fafafa;
}
.help_discription{
    background: #FFFFFF;
    box-shadow: 0 2rpx 4rpx 0 rgba(218,218,218,0.50);
    border-radius: 8rpx;
    padding:20rpx 20rpx 20rpx 40rpx;
    box-sizing: border-box;
    position: relative;
    height: 135rpx;
    margin-bottom: 60rpx;
}
.help_date{
    font-size: 30rpx;
    height: 42rpx;
    line-height: 42rpx;
    margin-bottom: 8rpx;
}
.help_date label{
    float: left;
}
.help_satus{
    float: right;
    color:#E65E34;
    height:42rpx;
    line-height:42rpx;
}
.help_sub_title{
    height: 48rpx;
}
.help_sub_title .sub_title{
    float: left;
    height: 48rpx;
    line-height: 48rpx;
    color:#444444;
    font-weight: bold;
    width: 430rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.edit_repeat{
    float: right;
    width: 120rpx;
    height: 40rpx;
    border:2rpx solid #6E6E6E;
    border-radius: 20rpx;
    line-height: 36rpx;
    font-size: 24rpx;
    text-align: center;
}
.help_discription em{
    display: block;
    background: #D8D8D8;
    box-shadow: 0 2rpx 4rpx 0 rgba(208,208,208,0.50);
    width: 16rpx;
    height: 16rpx;
    border-radius: 8rpx;
    background: #D8D8D8;
    position: absolute;
    top: 40rpx;
    left:-36rpx;
}
.no_messages{
    padding:100rpx;
}
.no_messages image{
    display: block;
    width: 192rpx;
    height: 104rpx;
    margin:auto;
    margin-bottom: 40rpx;
}
.no_messages .no_msg_text{
    text-align: center;
    font-size: 26rpx;
    color: #747474;
    margin-bottom: 50rpx;
}
.no_messages .go_lists{
    width: 258rpx;
    height: 68rpx;
    border:1px solid #D7273D;
    border-radius: 35rpx;
    line-height: 68rpx;
    text-align: center;
    font-size: 32rpx;
    color: #D82A3C;
    margin: auto;
}
.public_hover{
    background: #f1f1f1;
}