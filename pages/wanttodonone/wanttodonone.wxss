/* zhongjuan/pages\wanttodonone/wanttodonone.wxss */
.juanzhu{
  padding: 26rpx 26rpx 30rpx 30rpx;
  background: #fff;
  margin-bottom: 26rpx;
  box-sizing: border-box;
  position: relative;
}
.jz_discript{
  padding-left: 248rpx;
  position: relative;
  height: 174rpx;
}
.jz_discript .img_tit{
  width: 230rpx;
  height: 174rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.title_text{
  width:448rpx;
  height:90rpx;
  font-size:32rpx;
  color:#030303;
  line-height:45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 12rpx;
}
.jg_name{
  font-size:24rpx;
  color:#030303;
  line-height:33rpx;
  margin-bottom: 8rpx;
}
.jg_type{
  float: left;
  height:33rpx;
  border-radius:17rpx;
  border:2rpx solid #E65E34;
  padding:0 15rpx;
  line-height: 31rpx;
  box-sizing: border-box;
  font-size: 0;
}
.jg_type .type_icon{
  width:17rpx;
  height:20rpx;
  float: left;
  margin-top: 5rpx;
  margin-right: 7rpx;
}
.jg_type label{
  font-size: 20rpx;
  color:#E65E34;
}
.jz_stutas{
  height:50rpx;
  background:#D82A3C;
  box-shadow:1px 2px 6px 0px rgba(251,212,216,1);
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
  display: inline-block;
  font-size: 24rpx;
  color:#fff;
  line-height: 50rpx;
  padding-left: 26rpx;
  padding-right: 26rpx;
  position: absolute;
  right: 0;
  bottom: 30rpx;
}
.jz_stutas image{
  /* float: right; */
  display: inline-block;
  width: 11rpx;
  height: 18rpx;
  margin-left: 14rpx;
}
.jg_info{
  padding:30rpx 24rpx 30rpx 30rpx;
  background: #fff;
  margin-bottom: 26rpx;
  position: relative;
  overflow: hidden;
}
.title_jg{
  font-size:36rpx;
  color:#333333;
  font-weight:600;
  line-height:50rpx;
  margin-bottom: 46rpx;
}
.title_jg span{
  width:7rpx;
  height:35rpx;
  background:rgba(230,94,52,1);
  border-radius:4rpx;
  float: left;
  margin-top: 8rpx;
  margin-right: 14rpx;
}
.pub_info+.pub_info{
  margin-top: 30rpx;
}
.pub_info .pub_tit{
  font-size:28rpx;
  color:#666666;
  line-height:40rpx;
  margin-bottom: 14rpx;
}
.pub_info .pub_dis{
  font-size:32rpx;
  color:#333333;
  line-height:45rpx;
}
.jz_list{
  padding:20rpx 0;
  overflow: hidden;
  box-sizing: border-box;
  font-size: 0;
  text-align: center;
}
.jz_list .flaot{
  float: left;
}
.jz_list .num_input{
  width: 188rpx;
  height: 60rpx;
  float: right;
  font-size: 22rpx;
  text-align: left;
  border: 1px solid #BDBDBD;
  border-radius: 4rpx;
  margin-top: 10rpx;
}

.jz_list .num_tip{
  width: 188rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #999;
  float: right;
  font-size: 22rpx;
  text-align: left;
  margin-top: 10rpx;
}
.jz_list .name{
  font-size:30rpx;
  padding-top: 15rpx;
  line-height: 42rpx;
  width: 120rpx;
  text-align: left;
}
.jz_list .number{
  width: 150rpx;
}
.jz_list .number .zong{
  font-size:42rpx;
  display: block;
  line-height: 48rpx;
  color: #333333;
}
.jz_list .number .sx{
  font-size:22rpx;
  display: block;
  line-height: 30rpx;
  color:#999999;
}
.num_input input{
  padding:0rpx 17rpx;
  height: 58rpx;
  line-height: 35rpx;
}
.jz_list .number .yj_c,.jz_list .number .yj_c{
  color:#E4572E;
}
.jz_list+.jz_list{
  border-top: 1px solid #C6C6C6;
}
.title_jg text{
  font-size:24rpx;
  color:#999999;
  line-height:33rpx;
}
.money_input{
  width:218rpx;
  height:80rpx;
  line-height: 80rpx;
  border-radius:40rpx;
  border:1px solid #979797;
  float: right;
}
.money_input input{
  height: 80rpx;
  font-size: 24rpx;
  text-align: center;
}
.money_input_box{
  line-height: 80rpx;
}
.isfocusThis{
  border:1px solid #E4572E;

}
.isfocusThis input{
  font-size: 44rpx;
  color:#E4572E;
  padding:0 15rpx;
}
.btn_box{
  width: 500rpx;
  height: 90rpx;
  padding-top: 100rpx;
  padding-bottom: 45rpx;
  margin: auto;
}
.btn_box button{
  border-radius: 45rpx;
  background: #E4572E;
  color:#fff;
}
.jg_info .title_jg .symbol{
  font-size: 42rpx;
  color:#D82A3C;
}
.padding_bt{
  padding: 20rpx 20rpx 20rpx 30rpx;
}
.padding_bt .title_jg{
  margin-bottom: 0;
  overflow: hidden;
}
.phone_number{
  float: left;
  height: 80rpx;
}
.padding_bt .money_input_box label{
  float: left;
}
.edit_number{
  float: right;
  width: 30rpx;
  height: 30rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}