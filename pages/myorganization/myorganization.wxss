.dona_infos{
    height: 320rpx;
    padding:60rpx 20rpx 55rpx 20rpx;
    background: #df4334;
    box-sizing: border-box;
    position: relative;
}
.bg_icons{
    width: 52rpx;
    height: 38rpx;
    position: absolute;
    right: 0;
    bottom: 50rpx;
}
.dona_name{
    height: 48rpx;
    font-size: 34rpx;
    margin-bottom: 12rpx;
}
.help_title{
    float: left;
    line-height: 48rpx;
    color:#fff;
    font-weight: bold;
}
.right_type{
    float: left;
    height: 34rpx;
    line-height: 34rpx;
    padding:0 15rpx;
    font-size: 20rpx;
    color:#666666;
    background: #fff;
    border-radius: 17rpx;
    margin-left: 25rpx;
    margin-top: 8rpx;
}
.right_type image{
    width: 17rpx;
    height: 20rpx;
    float: left;
    margin-top: 8rpx;
    margin-right: 5rrpx;
}
.help_sm_tit{
    height: 34rpx;
    line-height: 34rpx;
}
.help_sm_tit image{
    float: left;
    width: 24rpx;
    height: 30rpx;
}
.address_text{
    float: left;
    font-size: 24rpx;
    color:#F5F5F5;
}
.my_organ_cont{
    display: block;
    width: 706rpx;
    margin:auto;
    position: relative;
}
.my_org_infos{
    background: #FFFFFF;
    box-shadow: 0 2rpx 4rpx 0 rgba(218,218,218,0.50);
    border-radius: 8rpx;
    height: 270rpx;
    box-sizing: border-box;
    margin-top: -140rpx;
    margin-bottom: 25rpx;
    padding:20rpx 30rpx 35rpx;
}
.user_name_text{
    height: 42rpx;
    line-height: 42rpx;
    margin-bottom: 25rpx;
}
.user_name_text .names{
    line-height: 42rpx;
    color:#030303;
    font-size: 30rpx;
}
.eidt_right{
    float: right;
    height: 42rpx;
    line-height: 42rpx;
    font-size: 24rpx;
    color:#555555;
}
.eidt_right image{
    display: inline-block;
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
}
.user_photo_imgbox{
    height: 154rpx;
    width: 100%;
    padding-left: 148rpx;
    padding-top: 24rpx;
    position: relative;
    box-sizing: border-box;
}
.user_up_img{
    width: 120rpx;
    height: 154rpx;
    border-radius: 8rpx;
    position: absolute;
    left: 0;
    top: 0;
}
.name_s{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 28rpx;
    position: relative;
}
.name_s label{
    float: left;
    margin-right: 20rpx;
}
.name_s label .phone_satus{
    margin-left: 20rpx;
}
.call_icon{
    width: 54rpx;
    height: 54rpx;
    position: absolute;
    right: 0;
    top: -6rpx;
}
.jigou_photos{
    box-shadow: 0 2rpx 4rpx 0 rgba(218,218,218,0.50);
    border-radius: 8rpx;
    background: #fff;
    width: 100%;
    box-sizing: border-box;
    padding:30rpx 20rpx 20rpx;
    margin-bottom: 25rpx;
}
.infoFail{
    font-size: 30rpx;
    color: #030303;
    line-height:30rpx;
    margin-bottom: 40rpx;
}
.infoFail label{
    font-size: 28rpx;
    display: inline-block;
    color:#999999;
    margin-left: 30rpx;
}
.photos_box{
    height: 325rpx;
}
.imgs_01{
    float: left;
    width: 325rpx;
    height: 325rpx;
}
.imgs_02{
    float: left;
    width: 160rpx;
    height: 160rpx;
    margin-left: 10rpx;
    margin-bottom: 8rpx;
}
.my_send_box{
    background: #FFFFFF;
    box-shadow: 0 2rpx 4rpx 0 rgba(218,218,218,0.50);
    border-radius: 8rpx;
    padding:30rpx 20rpx 80rpx;
    box-sizing: border-box;
    position: relative;
}
.my_help_tit{
    font-size: 28rpx;
    color:#333333;
    line-height: 28rpx;
    margin-bottom: 30rpx;
}
.my_help_tit label{
    font-size: 36rpx;
    color:#df4334;
}
.add_msg{
    font-size: 28rpx;
    color:#333333;
    line-height: 28rpx;
    float: right;
}
.add_msg image{
    display: inline-block;
    width: 25rpx;
    height: 25rpx;
}
.share_btn{
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    bottom: 30rpx;
    right: 20rpx;
}
.my_send_content{
    padding-left: 20rpx;
}
.my_sned_ul{
    border-left: 1px solid #E9E9E9;
    padding-left: 20rpx;
}
.my_help_lis{
    padding:10 0rpx;
    position: relative;
    margin-bottom: 40rpx;
}
.my_help_times{
    font-size: 30rpx;
    display: block;
    line-height: 30rpx;
    color:#666666;
}
.my_help_dis{
    font-size: 34rpx;
    color:#444444;
    line-height: 48rpx;
    font-weight: bold;
    width: 480rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.my_help_lis em{
    position: absolute;
    width: 22rpx;
    height: 22rpx;
    background: #D8D8D8;
    border-radius: 50%;
    left: -30rpx;
    top: 0;
}
.my_help_first em{
    width: 36rpx;
    height: 36rpx;
    background: #df4334;
    left: -36rpx;
}