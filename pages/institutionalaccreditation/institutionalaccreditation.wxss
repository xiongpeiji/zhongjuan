/* pages/institutionalaccreditation/institutionalaccreditation.wxss */
.creat_xinde_con{
    height: 100rpx;
    padding: 30rpx 25rpx 30rpx 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    background: #fff;
    margin-top: 1px;
    margin-bottom: 2rpx;
}
.padding_bottom{
    padding-bottom: 100rpx;
}
.xinde_title{
    float: left;
    font-size: 28rpx;
    color:#333333;
    line-height: 40rpx;
}
.title_input_box{
    float: left;
    height: 40rpx;
    padding-left: 20rpx;
    width: 550rpx;
    font-size: 0;
}
.title_input_box input{
    font-size: 28rpx;
    line-height: 40rpx;
    height: 40rpx;
    min-height: 40rpx;
    width: 100%;
    float: left;
}
.my_menu_list{
    position: relative;
    height: 98rpx;
    padding:28rpx 25rpx 28rpx 40rpx;
    background: #fff;
    line-height: 42rpx;
    box-sizing: border-box;
    margin-bottom: 2px;
}
.left_text{
    float: left;
    font-size: 30rpx;
    color:#333333;
}
.right_btn{
    float: right;
    overflow: hidden;
}
.right_icons{
    height:25rpx;
    width:15rpx;
    margin-left:20rpx;
    margin-top:15rpx;
    float:right;
}
.imgupload_box{
    padding: 25rpx;
    background: #fff;
    box-sizing: border-box;
}
.imguptile{
    font-size: 28rpx;
    color:#333333;
    line-height: 40rpx;
    margin-bottom: 30rpx;
}
.imguptile label{
    color:#999999;
}
.img_bg{
    display: inline-block;
    width: 100rpx;
    height: 100rpx;
    margin-right: 40rpx;
}
.bottom_btn{
    width:100%;
    height: 95rpx;
    line-height: 95rpx;
    background: #E4572E;
    text-align: center;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    color:#fff;
    font-size: 32rpx;
}
.fixed_bottom_btn{
    background: #D7263D;
}
.no_auth{
    font-size: 24rpx;
    color:#999999;
    display: inline-block;
}
.user_photo_bg{
    width: 155rpx;
    height: 190rpx;
}
.user_photos_box{
    overflow: hidden;
}
.user_photos_box .user_card_bg{
    width: 280rpx;
    height: 190rpx;
    float: left;
    margin-right: 20rpx;
}