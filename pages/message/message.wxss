/* pages/message/message.wxss */
.message_content{
    padding-top:12rpx;
    background: #fff;
    display: block;
    margin-bottom: 20rpx
}
.message_content .msg_list{
    padding:30rpx 20rpx 30rpx;
    background: #fff;
    border-bottom: 1px solid #E5E5E5;
}
.message_content .msg_discription{
    padding-left: 116rpx;
    height: 88rpx;
    position: relative;
    display: block;
}
.msg_discription image{
    width:88rpx;
    height: 88rpx;
    position: absolute;
    left: 0;
    top: 0;
}
.msg_title{
    height: 32rpx;
    line-height: 32rpx;
    padding:5rpx 0;
    margin-bottom: 5rpx;
}
.msg_title .sys_title{
    font-size: 30rpx;
    line-height: 32rpx;
    color:#030303;
    float: left;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    max-width:390rpx;
}
.msg_title .msg_type{
    float: left;
    height: 32rpx;
    line-height: 32rpx;
    padding:0 15rpx;
    border-radius: 16rpx;
    background: #6591FF;
    font-size: 24rpx;
    color:#fff;
    margin-left: 15rpx;
}
.msg_title .msg_time{
    float: right;
    font-size: 26rpx;
    color:#999999;
    line-height: 32rpx;
}
.msg_texts{
    /* width: 500rpx; */
    padding: 15rpx 100rpx 0 0;
    position: relative;
    font-size: 24rpx;
    color:#888888;
    line-height: 32rpx;
    height: 32rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
}
.msg_texts span{
    width:20rpx;
    height: 20rpx;
    background: #f00;
    position: absolute;
    right: 30rpx;
    top: 0;
    border-radius: 50%;
}
.no_message{
    text-align: center;
    font-size: 0;
    padding:100rpx;
    background: #fafafa;
}
.no_msg_img{
    text-align: center;
}
.no_msg_img image{
    display: inline-block;
    width:86rpx;
    height: 70rpx;
}
.no_message .no_msg_text{
    font-size: 26rpx;
    color:#747474;
}

.creat-btn-xinde{
  padding:20rpx;
}
.creat-btn-xinde button{
  width: 446rpx;
  height: 72rpx;
  line-height: 72rpx;
  margin: auto;
  border: 2rpx solid #E4572E;
  border-radius: 38px;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #E65E37
}