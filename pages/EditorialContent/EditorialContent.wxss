/* pages/EditorialContent/EditorialContent.wxss */
.edit_content{
  padding: 30rpx 6rpx 20rpx;
  background: #fff;
}
.edit_img{
  padding: 0 22rpx 0 110rpx;
  height: 70rpx;
  overflow: hidden;
  position: relative;
  margin-bottom: 26rpx;
}
.edit_img .user_img{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  left: 22rpx;
  top: 0;
  border-radius: 50%;
}
.edit_img label{
  font-size: 32rpx;
  color:#483C38;
  line-height: 70rpx;
  float: left;
}

.right_btn_text{
  float: right;
}
.right_btn_text label{
  color:#E14A32;
}
.right_btn_text .right_arr{
  width: 9rpx;
  height: 15rpx;
  float: right;
  margin-top: 30rpx;
}

.love_input{
  padding: 46rpx 0;
  background: #fff;
  box-shadow:1rpx 3rpx 4rpx 1rpx rgba(254,244,242,1);
  border-radius: 32rpx;
  position: relative;
  height: 174rpx;
  box-sizing: border-box;
  text-align: center;
  z-index: 2;
  font-size: 0;
}
.love_bg{
  position: absolute;
  width: 177rpx;
  height: 173rpx;
  right: 0;
  top: 0;
  z-index: 1;
}
.love_input input{
  display: inline-block;
  width:240rpx;
  height:80rpx;
  background:rgba(255,255,255,1);
  box-shadow:1rpx 4rpx 4rpx 0rpx rgba(229,229,229,0.5);
  border-radius:40px;
  border:1px solid rgba(225,225,225,1);
  font-size: 26rpx;
}
.love_input label{
  line-height: 80rpx;
  display: inline-block;
  color:#E14A32;
  font-size: 36rpx;
  font-weight: bold;
}
.left_t{
  float: left;
  margin-left:60rpx;
}
.right_t{
  float: right;
  margin-right: 50rpx;
}
.edit_input{
  padding:40rpx;
  border-top: 1px solid #E0E0E0;
  border-bottom: 1px solid #E0E0E0;
  min-height: 270rpx;
  background: #fff;
}
.edit_input textarea{
    width: 100%;
    font-size: 28rpx;
    color:#999999;
    line-height: 40rpx;
    height: 270rpx;
    min-height: 270rpx;
    max-height: 270rpx;
    overflow-y: auto;
}
.etit_input_cot{
  width: 100%;
  height: 100%;
}
.etit_input_cot image{
  width: 32rpx;
  height: 32rpx;
  display: inline-block;
}
.etit_input_cot label{
  font-size:32rpx;
  color:#939393;
}


.photo_box{
  padding: 30rpx 25rpx 30rpx;
  background: #fff;
}
.photo_tit{
  margin-bottom: 40rpx;
}
.photo_box label{
  font-size: 34rpx;
  line-height: 48rpx;
  color:#9F9F9F;
}
.photo_box .photo_text{
  color:#333333;
}

.express-img{
  display:inline-block;
  width: 216rpx;
  height: 216rpx;
  position: relative;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
}
.express-img image{
  width: 216rpx;
  height: 216rpx;
  float: left;
}
.delet-express{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: -15rpx;
  right: -15rpx;
}
.delet-express image{
  width: 48rpx;
  height: 48rpx;
}
.express_box{
  margin-right: -24rpx;
}
.express_box .img_bg{
  display:inline-block;
  width: 216rpx;
  height: 216rpx;
}

.fabu_btn{
  width: 410rpx;
  height: 74rpx;
  margin: auto;
  margin-top: 80rpx;
}
.fabu_btn button{
  background:rgba(228,87,46,1);
  box-shadow:0px 2rpx 4rpx 0rpx rgba(252,194,177,1);
  border-radius:40rpx;
  color:#fff;
}