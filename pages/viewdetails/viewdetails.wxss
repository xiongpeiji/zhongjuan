/* pages/viewdetails/viewdetails.wxss */
.juanzhu{
  padding: 26rpx 26rpx 30rpx 30rpx;
  background: #fff;
  margin-bottom: 26rpx;
  box-sizing: border-box;
  position: relative;
}
.jz_discript{
  padding-left: 248rpx;
  position: relative;
  height: 174rpx;
}
.jz_discript .img_tit{
  width: 230rpx;
  height: 174rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.title_text{
  width:448rpx;
  height:90rpx;
  font-size:32rpx;
  color:#030303;
  line-height:45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 12rpx;
}
.jg_name{
  font-size:24rpx;
  color:#030303;
  line-height:33rpx;
  margin-bottom: 8rpx;
}
.jg_type{
  float: left;
  height:33rpx;
  border-radius:17rpx;
  border:2rpx solid #E65E34;
  padding:0 15rpx;
  line-height: 31rpx;
  box-sizing: border-box;
  font-size: 0;
}
.jg_type .type_icon{
  width:17rpx;
  height:20rpx;
  float: left;
  margin-top: 5rpx;
  margin-right: 7rpx;
}
.jg_type label{
  font-size: 20rpx;
  color:#E65E34;
}
.jz_stutas{
  height:50rpx;
  background:#D82A3C;
  box-shadow:1px 2px 6px 0px rgba(251,212,216,1);
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
  display: inline-block;
  font-size: 24rpx;
  color:#fff;
  line-height: 50rpx;
  padding-left: 26rpx;
  padding-right: 26rpx;
  position: absolute;
  right: 0;
  bottom: 30rpx;
}
.jz_stutas image{
  /* float: right; */
  display: inline-block;
  width: 11rpx;
  height: 18rpx;
  margin-left: 14rpx;
}


.pub_list{
  overflow: hidden;
  font-size:28rpx;
  color:#666666;
  margin-bottom: 25rpx;
}
.left_name{
  float: left;
}
.right_name{
  float: right;
}

.btn_box{
  width:526rpx;
  height:90rpx;
  margin: auto;
  margin-top: 100rpx;
}
.btn_box button{
  background:rgba(228,87,46,1);
  box-shadow:0px 2px 4px 0px rgba(252,194,177,1);
  border-radius:45rpx;
  color:#fff;
  font-size: 38rpx;
  height: 90rpx;
  line-height: 90rpx;
}