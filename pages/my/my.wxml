<!--我的-->
<view class="container">
    <view class="my_top">
        <view class="user_icon" hidden="{{!isLogin}}">
            <image class="user_wechat_icon" src="{{avatarUrl}}"></image>
            <label class="user_name">{{nickName}}</label>
        </view>
        <view class="user_icon" hidden="{{isLogin}}">
            <view class="no_login"></view>
            <button class="user_login_btn" size="mini"  open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo">点击登录</button>
        </view>
        <view class="editUserInfo" bindtap="editUserInfo" hidden="{{!isLogin}}">
            <image src="/images/icon_fanhui.png"></image>
        </view>
    </view>
    <view class="my_menu_list" hover-class="public_hover" bindtap="phoneAuth">
        <label class="left_text">手机认证</label>
        <view class="right_btn">
            <label class="no_auth"><image src="/images/web__weirenzheng.png"></image>未认证</label>
            <image class="right_icons" src="/images/renzheng_jinru.png"></image>
        </view>
    </view>
    <view class="my_menu_list" hover-class="public_hover" bindtap="jigouAuth">
        <label class="left_text">机构认证</label>
        <view class="right_btn">
            <label class="no_auth pass_auth"><image src="/images/icon_yirenzheng.png"></image>已认证</label>
            <image class="right_icons" src="/images/renzheng_jinru.png"></image>
        </view>
    </view>
    <view class="my_menu_list" hover-class="public_hover" bindtap="helpMsgDetal">
        <label class="left_text">求捐信息管理</label>
        <view class="right_btn">
            <image class="right_icons" src="/images/renzheng_jinru.png"></image>
        </view>
    </view>
    <view class="my_menu_list" hover-class="public_hover" bindtap="myDona">
        <label class="left_text">我的捐赠</label>
        <view class="right_btn">
            <image class="right_icons" src="/images/renzheng_jinru.png"></image>
        </view>
    </view>
    <view class="my_menu_list" hover-class="public_hover" bindtap="xindeList">
        <label class="left_text">我的心得</label>
        <view class="right_btn">
            <image class="right_icons" src="/images/renzheng_jinru.png"></image>
        </view>
    </view>
</view>

