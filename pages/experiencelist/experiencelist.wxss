/* pages/experiencelist/experiencelist.wxss */
.xinde_list_con{
    width: 100%;
    display: block;
    padding:55rpx 35rpx 0 25rpx;
    box-sizing: border-box;
}
.xinde_lists{
    padding-left: 95rpx;
    position: relative;
    margin-bottom: 70rpx;
}
.list_data{
    width: 95rpx;
    position: absolute;
    left: 0;
    top: 20rpx;
    text-align: center;
}
.list_data b{
    display: block;
    background: #E4572E;
    border-radius: 5rpx;
    width: 6rpx;
    height: 100%;
    position: absolute;
    left: 0;
    top:0;
}
.list_day{
    font-size: 36rpx;
    color:#030303;
    line-height: 36rpx;
    margin-bottom: 15rpx;
}
.list_month{
    font-size:24rpx;
    color:#666666;
    line-height: 24rpx;
}
.list_discription{
    padding:20rpx 30rpx;
    background: #fff;
    border-radius: 4rpx;
    border:1rpx solid #E2E2E2;
    box-sizing: border-box;
}
.list_title{
    font-size: 32rpx;
    color:#333333;
    font-weight: bold;
    line-height: 45rpx;
    margin-bottom: 14rpx;
}
.list_dis_text{
    font-size: 28rpx;
    color:#333333;
    line-height: 35rpx;
    height: 140rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-bottom: 28rpx;
}
.data_times{
    height: 34rpx;
    line-height: 34rpx;
    position: relative;
}
.data_times .time_box{
    float: left;
    font-size: 24rpx;
    color:#999999;
    margin-right: 30rpx;
    line-height: 34rpx;
}
.data_times .states_icon{
    width: 34rpx;
    height: 34rpx;
    margin-right: 10rpx;
    float: left;
}
.list_state{
    font-size: 24rpx;
    color:#E65E34;
    float: left;
    line-height: 34rpx;
}
.states_waiting .data_times .list_state{
    color:#E65E34;
}
.states_success .data_times .list_state{
    color:#2CB276;
}
.states_warn .data_times .list_state{
    color:#333333;
}
.states_warn .list_discription{
    background: #EAEAEA;
}
.re_edit{
    width: 160rpx;
    height: 40rpx;
    font-size: 24rpx;
    text-align: center;
    line-height: 40rpx;
    background: #E4572E;
    border-radius: 20rpx;
    position: absolute;
    right: 0;
    top: -3rpx;
    color:#fff;
}
.edit_hover{
    background: #dd3f35;
}