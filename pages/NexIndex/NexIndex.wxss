  z-index: 2;
}
.sta_title{
  font-size: 28rpx;
  color: #635151;
  line-height: 40rpx;
}
.sta_one{
  font-size: 26rpx;
  color: #000000;
  line-height: 46rpx;
}
.sta_one label{
  font-size: 38rpx;
  color: #FF6C69;
}