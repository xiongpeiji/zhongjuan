<!--index.wxml-->
<view class="container">

<!--banner-->
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" 
  indicator-color="{{indicatorcolor}}" 
   indicator-active-color="{{indicatoractivecolor}}" 
   interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key="{{id}}">
      <swiper-item>
        <image src="{{item.img_url}}" class="slide-image" width="375" height="300"/>
      </swiper-item>
    </block>
  </swiper>
<!--sort-->
  <view class='index_sort'>
    <view class='sort_left'>
      <span>求捐信息</span><image src='/images/sort.png'></image>
    </view>
    <view class='sort_right' bindtap="toggle">
      智能排序<image src='/images/sort_arr.png'></image>
    </view>
  </view>
  <!--list-->
  <view class='index_list' wx:for="{{qiujuanList}}" wx:key="{{id}}">
    <view class='list_tit_box'>
      <view class='list_title'>{{item.title}}</view>
      <view class='list_v'>
        <image src='/images/shenqingqiyerenzheng.png'></image>
        <span>{{item.type_name}}</span>
      </view>
      <view class='list_time'>{{item.add_time}}</view>
    </view>
    <view class='list_img' bindtap="qiujuanDetail" data-id="{{item.id}}">
      <image src='{{item.image}}'></image>
      <view class='list_img_title'>
        <h4>{{item.title}}</h4>
        <p>{{item.content}}</p>
      </view>
    </view>
    <view class='joins'>
      <view class='left_user_icon'>
        <block wx:for="{{item.user_data}}" wx:key="{{id}}">
          <image src='{{item.avatar}}'></image>
        </block>
      </view>
      <view class='jions_num'>{{item.donation_num}}人已加入</view>
      <view class='slider_bar'>
        <view class='bar_bg'>
          <span class='Percentage' style='width:{{item.rate}};'></span>
        </view>
        <view class='Completion'>完成度{{item.rate}}</view>
      </view>
    </view>
  </view>
  <!--蒙版和筛选-->
  <view class="{{first_click?'marking':'hide'}}" bindtap="hideArea"></view>
  <view class="{{first_click?'area_box':'hide'}}">
    <view class="area_title">
      <view class="area_pos active_this">
        区域
      </view>
      <view class="area_pos">
        类型
      </view>
    </view>
    <view class="chose_box">
      <view hover-class="punlic_hov">包头</view>
      <view hover-class="punlic_hov">大连</view>
      <view hover-class="punlic_hov">佛山</view>
      <view hover-class="punlic_hov">桂林</view>
      <view hover-class="punlic_hov">河南</view>
    </view>
  </view>

</view>
