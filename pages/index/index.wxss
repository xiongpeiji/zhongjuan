/**index.wxss**/
swiper, swiper image {
  height: 308rpx;
}
.slide-image{
  display: block;
  width:750rpx;
  height: 308rpx;
}
.index_sort{
  padding:17rpx;
  height: 76rpx;
  box-sizing: border-box;
  background: #fafafa;
  line-height: 42rpx;
}
.sort_left{
  float: left;
  position: relative;
  font-size: 30rpx;
}
.sort_left span{
  position: relative;
  z-index: 1;
  font-weight: bold;
}
.sort_left image{
  display: inline-block;
  width: 26rpx;
  height: 19rpx;
  position: absolute;
  right: 0px;
  bottom: 5rpx;
  z-index: 0;
}
.sort_right{
  float: right;
  font-size: 30rpx;
  color:#666666;
}
.sort_right image{
  display: inline-block;
  width: 23rpx;
  height: 13rpx;
  position: relative;
  top: -2rpx;
  margin-left: 5rpx;
}
.index_list{
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.index_list .list_tit_box{
  height: 45rpx;
  line-height: 45rpx;
  box-sizing: border-box
}
.index_list .list_tit_box .list_title{
  font-size: 32rpx;
  color:#333;
  margin-bottom: 22rpx;
  float: left;
}
.index_list .list_tit_box .list_v{
  padding:0 18rpx;
  background: #E4572E;
  line-height: 34rpx;
  float: left;
  font-size: 20rpx;
  color:#fff;
  margin-left: 20rpx;
  margin-top:5rpx;
  border-radius: 18rpx;
}
.index_list .list_tit_box .list_v image{
  width:20rpx;
  height: 16rpx;
  float: left;
  vertical-align: middle;
  margin-top: 10rpx;
  margin-right: 10rpx;
}
.list_img{
  position: relative;
  margin-bottom: 40rpx;
}
.list_img image{
  width: 100%;
}
.list_time{
  float: right;
  font-size: 26rpx;
  color: #999999;
  line-height: 45rpx;
}
.list_img_title{
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0,0,0,0.60);
  padding:20rpx 20rpx 10rpx;
}
.list_img_title h4{
  font-size: 32rpx;
  line-height: 32rpx;
  color:#fff;
  display: block;
  margin-bottom: 10rpx;
  font-weight: bold;
}
.list_img_title p{
  font-size: 26rpx;
  color:#fff;
  line-height: 37rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.joins{
  height: 52rpx;
  position: relative;
  line-height: 52rpx;
}
.left_user_icon{
  float: left;
  height: 52rpx;
}
.left_user_icon image{
  width: 52rpx;
  height: 52rpx;
  margin-right: -15rpx;
  float: left;
}
.jions_num{
  float: left;
  color: #929292;
  line-height: 52rpx;
  font-size: 24rpx;
  margin-left: 70rpx;
}
.slider_bar{
  float: right;
  position: relative;
}
.slider_bar .bar_bg{
  width: 126rpx;
  height: 14rpx;
  border-radius: 7rpx;
  background: #E6E6E6;
  overflow: hidden;
  font-size: 0;
}
.slider_bar .bar_bg .Percentage{
  display: block;
  height: 100%;
  background: #E4572E;
  border-radius: 7rpx;
}
.slider_bar .Completion{
  position: absolute;
  width: 100%;
  bottom: -50rpx;
  left: 0;
  font-size: 24rpx;
  color:#E4572E;
}
