/* pages/SearchPage/SearchPage.wxss */
.search_box{
  padding: 60rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  font-size: 28rpx;
  color: #68615F;
  overflow: hidden;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 10;
}
.top_right_box{
  float: left;
  height: 64rpx;
  width: 580rpx;
  box-sizing: border-box;
  padding-left: 80rpx;
  background: #EFEEEE;
  border-radius: 32rpx;
  position: relative;
}
.top_right_box image{
  display: inline-block;
  width: 29rpx;
  height: 28rpx;
  position: absolute;
  left: 30rpx;
  top: 20rpx;
}
.top_right_box input{
  height: 64rpx;
}
.swiper-content{
  margin-bottom: 20rpx;
}

.search_btn{
  font-size: 32rpx;
  color: #575757;
  line-height: 64rpx;
  width: 100rpx;
  float: left;
  text-align: center;
}


.search_container{
  padding-top: 184rpx;
  background: #fff;
}
.history_cont{
  border-top: 1rpx solid #EAE9E9;
  padding: 40rpx 30rpx;
}
.search_hot{
  overflow: hidden;
  margin-bottom: 40rpx;
}
.search_title{
  font-size: 32rpx;
  color: #383838;
  line-height: 46rpx;
  font-weight: bold;
  float: left;
}
.srarch_remove{
  font-size: 30rpx;
  color: #706E6E;
  line-height: 46rpx;
  font-weight: bold;
  float: right;
}
.search_list{
  overflow: hidden;
  margin-bottom: 40rpx;
}
.search_name{
  float: left;
  font-size: 30rpx;
  color: #515151;
}
.search_img{
  width: 34rpx;
  height: 34rpx;
  float: right;
}
.hot_words{
  float: left;
  min-width: 132rpx;
  box-sizing: border-box;
  border: 2rpx solid #EAE9E9;
  border-radius: 27rpx;
  height: 54rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 30rpx;
  color:#515151;
  margin-right: 30rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}