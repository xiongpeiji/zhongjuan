/* pages/NewCompany/NewCompany.wxss */
.choodeArea{
  width: 100%;
  padding: 15rpx 24rpx;
  height: 108rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  z-index: 1000;
}
.choodeArea picker{
  width: 100%;
  padding:0 15rpx;
  box-sizing: border-box;
  height: 86rpx;
  border:1rpx solid #E9E9E9;
  border-radius: 44rpx;
  background: #fff;
  line-height: 80rpx;
  box-shadow:0px 2px 8px 0px rgba(255,239,234,1);
  font-size: 32rpx;
  color:#A6A6A6;
  overflow: hidden;
}
.choodeArea picker .picker .name_box{
  float: left;
  padding-right: 25rpx;
  width: 198rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  position: relative;
}
.name_box em{
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: 5rpx;
  vertical-align: middle;
  border-top: 10rpx solid;
  border-right: 10rpx solid transparent;
  border-left: 10rpx solid transparent;
  position: absolute;
  right: 0rpx;
  top: 50%;
  margin-top: -4rpx;
  color: #B1B1B1;
}
.choodeArea picker .picker .active{
  color: #333333;
}


.screen_con{
  padding-top: 118rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.compa_list{
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 36rpx;
}


.compa_title{
  overflow: hidden;
  height: 66rpx;
  line-height: 66rpx;
  padding-left: 78rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #CDCDCD;
  position: relative;
  margin-bottom: 24rpx;
}
.compa_photo{
  width: 66rpx;
  height: 66rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.compa_name{
  font-size: 32rpx;
  color: #474747;
  line-height: 66rpx;
  max-width: 350rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  float: left;
}
.compa_zr{
  float: right;
  line-height: 66rpx;
  font-size: 24rpx;
  color: #6F90EB;
}
.compa_zr image{
  width: 22rpx;
  height: 22rpx;
  display: inline-block;
  margin-right: 10rpx;
}
.compa_discri_list{
  overflow: hidden;
  margin-bottom: 15rpx;
}
.compa_name_user{
  float: left;
  width: 200rpx;
  font-size: 30rpx;
  color: #888888;
  line-height: 42rpx;
}
.compa_name_user image{
  width: 28rpx;
  height: 30rpx;
  display: inline-block;
  margin-right: 15rpx;
  position: relative;
  bottom: -1rpx;
}
.compa_text{
  float: left;
  font-size: 30rpx;
  color: #555555;
  line-height: 42rpx;
  width: 480rpx;
}












/* 返回顶部 */
.goTop{
  position: fixed;
  height: 80rpx;
  width: 80rpx;
  bottom: 50rpx;
  right: 30rpx;
  z-index: 100;
}