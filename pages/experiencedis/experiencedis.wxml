<view class="container">
  <view class='promotion-img'>
    <swiper autoplay="true" bindchange="swiper">
      <block wx:for="{{xindedetails.image}}" wx:key="{{index}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" />
