/* pages/experiencedis/experiencedis.wxss */
swiper, swiper image {
  height: 520rpx;
}

.promotion-img {
  width: 100%;
  font-size: 0;
  position: relative;
  overflow: hidden;
  margin-bottom: 45rpx;
}
.promotion-img .current {
  position: absolute;
  right: 60rpx;
  bottom: 30rpx;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 0rpx 30rpx;
  height: 42rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
}
.promotion-img .current span{
  font-size: 30rpx;
}

.promotion-img image {
  display: block;
  width: 100%;
  height: 520rpx;
}