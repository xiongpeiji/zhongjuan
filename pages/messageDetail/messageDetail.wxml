    </view>
    <view class="message_cont" hidden='{{type == 2}}'>
        <view class="detail_title">系统消息</view>
        <view class="detail_content">
            <view class="express_title">
                <image src="{{info.icon}}"></image>{{info.title}}
            </view>
            <view class="express_Order">
                {{info.content}}
            </view>
        </view>
    </view>
