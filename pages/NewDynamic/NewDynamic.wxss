/* pages/NewDynamic/NewDynamic.wxss */
.top_imgs{
  width: 100%;
  height: 218rpx;
}
.dyna_list{
  padding: 106rpx 28rpx 20rpx;
  background: #fff;
  margin-top: 60rpx;
  position: relative;
}
.dyna_user{
  background: #FFFFFF;
  width: 500rpx;
  height: 106rpx;
  border: 1rpx solid #EDEDED;
  box-shadow: 0 2rpx 4rpx 0 rgba(202,202,202,0.50);
  border-radius: 53rpx;
  position: absolute;
  left: 50%;
  margin-left: -250rpx;
  top: -36rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.user_img_icon{
  float: left;
  padding-left: 72rpx;
  height: 64rpx;
  width: 170rpx;
  margin-right: 10rpx;
  position: relative;
}
.user_img_icon image{
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.user_name{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #848484;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-bottom: 4rpx;
}
.user_type{
  font-size: 20rpx;
  color: #E4572E;
  line-height: 28rpx;
}
.jz_numbers{
  font-size: 24rpx;
  color: #636363;
  line-height: 34rpx;
  padding-left: 10rpx;
  border-left: 1rpx solid #E1E1E1;
  position: absolute;
  top: 35rpx;
  left: 263rpx;
}
.jz_numbers label{
  color:#E4572E;
}
.dyna_discription{
  overflow: hidden;
  margin-bottom: 16rpx;
}
.dis_title{
  font-size: 34rpx;
  color: #434343;
  line-height: 48rpx;
  max-width: 400rpx;
  float: left;
}
.dis_date{
  float: right;
  font-size: 32rpx;
  color: #999999;
}
.dis_text{
  font-size: 32rpx;
  color: #6C6C6C;
  line-height: 48rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  margin-bottom: 30rpx;
}
.dis_imgs{
  overflow: hidden;
  margin-bottom: 40rpx;
}
.dis_imgs image{
  width: 220rpx;
  height: 220rpx;
  float: left;
}
.dis_imgs image+image{
  margin-left: 14rpx;
}
.dyna_dianzan{
  overflow: hidden;
  padding-left: 20rpx;
}
.dis_zan{
  float: left;
  min-width: 100rpx;
  margin-right: 30rpx;
  overflow: hidden;
}
.dis_zan image{
  width: 34rpx;
  height: 34rpx;
  float: left;
}
.dis_zan label{
  font-size: 24rpx;
  color: #826F6A;
  float: left;
  margin-left: 10rpx;
  margin-top: 8rpx;
}
.dis_zan.active label{
  color: #E4572E;
}

/* 返回顶部 */
.goTop{
  position: fixed;
  height: 80rpx;
  width: 80rpx;
  bottom: 50rpx;
  right: 30rpx;
  z-index: 100;
}