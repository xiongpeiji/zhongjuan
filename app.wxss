/**app.wxss**/
.container {
  min-height: 100%;
  display: block;
  overflow: hidden;
  background: #fafafa;
  position: relative;
}
page{
  height: 100%;
}
image {
  display: block;
}
.delete-img{
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  margin-right: 40rpx;
  position: relative;
}
.delete-img .delet-icon{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background:rgba(255, 255, 255,.5);
  text-align: center;
  vertical-align: middle;
}
.delete-img .delet-icon image{
  width: 38rpx;
  height: 40rpx;
  display: inline-block;
  margin-top: 28rpx;
}